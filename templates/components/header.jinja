<header role="banner"
  class="bg-base-200/80 backdrop-blur-sm fixed top-0 left-0 right-0 z-50 border-b border-base-300">
  <div class="max-w-4xl mx-auto px-6 h-16 flex items-center justify-between">
    <div class="text-xl font-bold text-primary">
      <a href="/" class="hover:opacity-90 transition">Home</a>
    </div>
    <nav aria-label="Primary" class="text-sm">
      <ul class="flex items-center gap-4">
        <li>
          <a href="/about"
             class="px-2 py-1 rounded-md hover:text-primary focus:outline-none focus-visible:ring"
             {% if page_id and page_id.startswith('about') %} aria-current="page" class="text-primary font-semibold px-2 py-1 rounded-md"{% endif %}>
            About
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>