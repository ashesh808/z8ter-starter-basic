{% extends "base.jinja" %}
{% block content %}
  <!-- Hero -->
  <section class="hero bg-base-200 rounded-2xl p-8 md:p-12">
    <div class="hero-content flex-col md:flex-row gap-10">
      <div class="shrink-0">
        <div class="mask mask-hexagon bg-primary/10 p-6">
          <span class="text-5xl">⚡️</span>
        </div>
      </div>
      <div>
        <h1 class="text-4xl md:text-5xl font-extrabold tracking-tight">Z8ter</h1>
        <p class="py-4 text-lg opacity-90">
          Async Python, SSR-first. File-based <span class="font-semibold">views</span> & tidy
          <span class="font-semibold">APIs</span>, with a sprinkle of joy.
        </p>
        <div class="flex flex-wrap items-center gap-3">
          <a class="btn btn-primary" href="https://github.com/ashesh808/Z8ter" target="_blank" rel="noopener">GitHub</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Badges / stats directly under hero -->
  <section class="mt-8">
    <div class="stats shadow w-full">
      <div class="stat">
        <div class="stat-title">Mode</div>
        <div class="stat-value text-primary">Dev</div>
        <div class="stat-desc">SSR + HMR</div>
      </div>
      <div class="stat">
        <div class="stat-title">Routing</div>
        <div class="stat-value">Auto</div>
        <div class="stat-desc">views → URLs</div>
      </div>
      <div class="stat">
        <div class="stat-title">APIs</div>
        <div class="stat-value">Decorator</div>
        <div class="stat-desc">/api/&lt;id&gt;</div>
      </div>
    </div>
  </section>

  <!-- Two-column: Quickstart + Try API -->
  <section class="mt-10 grid md:grid-cols-2 gap-8">
    <div class="card bg-base-200">
      <div class="card-body">
        <h2 class="card-title">Quickstart</h2>
        <p class="opacity-80">Spin up a dev app and try the conventions.</p>
        <pre class="mt-3 p-4 rounded-lg bg-base-300 overflow-x-auto text-sm">
          <code>
# (coming soon) CLI Commands
  z8 new myapp
  cd myapp
  z8 run dev
  z8 create_page page
  z8 create_api api
          </code>
        </pre>
      </div>
    </div>

    <div class="card bg-base-200">
      <div class="card-body">
        <h2 class="card-title">Try the API</h2>
        <p class="opacity-80">This button is wired to call <code>/api/hello</code> and display the result below.</p>
        <div class="flex gap-3">
          <button id="try-api" class="btn btn-outline btn-primary">Hello API</button>
        </div>
        <div id="api-response" class="mt-4 text-sm"></div>
      </div>
    </div>
  </section>
{% endblock %}
